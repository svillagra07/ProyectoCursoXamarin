<?xml version="1.0" encoding="UTF-8"?>
<ContentPage BackgroundColor="AliceBlue" xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="AppBancoUniversal.XAML.RecuperarClavePage">
    <ContentPage.Content>
        <StackLayout  Orientation="Vertical" VerticalOptions="CenterAndExpand" BackgroundColor="AliceBlue" Padding="10">
             <Image Source="IMG/GE.png" HeightRequest="150" WidthRequest="200" />
              <Label x:Name="lblRegistro" Text="Recuperar contraseña"  HorizontalOptions="CenterAndExpand" TextColor="Black"/>
            <Entry x:Name="txtEmail" HorizontalOptions="Fill"  Placeholder="Email" PlaceholderColor="Gray" BackgroundColor="Beige" TextColor="Black"/>
            <Button x:Name="btnRecuperar" Text="Recuperar contraseña" BackgroundColor="DodgerBlue" TextColor="White"/>
            <Button x:Name="btnRegresar" Text="Regresar" BackgroundColor="Maroon" TextColor="White"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
